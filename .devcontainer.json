{
    "image":"ghcr.io/rocker-org/devcontainer/r-ver:4.5",
    "features": {
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "cmake, python3.12-venv, libgtk-3-dev,libnotify-dev,libnss3,libxss1,xdg-utils,libasound2t64",
			"upgradePackages": true
		},
		"ghcr.io/rocker-org/devcontainer-features/pandoc:1": {},
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:latest": {
			"version": "1",
			"installTinyTex": true,
			"installChromium": true
		}

	},
    "customizations": {
		// Configure properties specific to Positron.
		"vscode": {
			"settings": {
				"[r]": {
					"editor.wordSeparators": "`~!@#%$^\u0026*()-=+[{]}\\|;:'\",\u003c\u003e/?",
					"editor.formatOnSave": true
				},
				"positron.reticulate.enabled": true,
				"r.bracketedPaste": true,
				"r.debugger.timeouts.startup": 20000,
				"r.lsp.debug": true,
				"r.plot.useHttpgd": true,
				"r.rpath.linux": "/usr/local/bin/R",
				"r.rterm.linux": "/usr/local/bin/radian",
				"r.useRenvLibPath": true,
				"r.workspaceViewer.showObjectSize": true,
				"quarto.path": "/opt/quarto/bin/quarto"
			},
			"extensions": [
				"streetsidesoftware.code-spell-checker",
				"christian-kohler.path-intellisense",
				"mhutchie.git-graph",
				"posit.air-vscode"
			]
		}
	},
    "postCreateCommand": "./postCreateCommand.sh"
}